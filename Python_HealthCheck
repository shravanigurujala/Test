import requests
import sys

# Replace with your EC2 public IP
url = "http://52.66.64.131"

try:
    r = requests.get(url, timeout=5)
    if r.status_code == 200:
        print("✅ Health Check Passed: Website is accessible!")
    else:
        print(f"⚠️ Health Check Failed: Status {r.status_code}")
        sys.exit(1)
except Exception as e:
    print(f"❌ Health Check Error: {e}")
    sys.exit(1)
